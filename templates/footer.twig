<footer id="footer" class="site-footer {{ nav_type }}">
	<div class="container">
		{% include 'footer_social_media.twig' %}
		{% if nav_type != 'minimal' %}
			<ul class="list-unstyled links">
				{% for primary in footer_primary_menu %}
					<li>
						<a href="{{ primary.url }}"
							data-ga-category="Footer Navigation"
							data-ga-action="Primary Links"
							data-ga-label="{{ primary.title }}">
							{{ primary.title }}
						</a>
					</li>
				{% endfor %}
				
				{% for secondary in footer_secondary_menu %}
					<li>
						<a href="{{ secondary.url }}"
							data-ga-category="Footer Navigation"
							data-ga-action="Secondary Links"
							data-ga-label="{{ secondary.title }}">
							{{ secondary.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>

	<div class="copyright">
		<div class="container wrapper">
			<span role="text">
				{{ 'creative-commons'|svgicon }}
				{{ copyright_text_line2|e('wp_kses_post')|raw }} {{"now"|date('Y')}}
			</span>
			<span role="text">
				{{ copyright_text_line1|e('wp_kses_post')|raw }}
			</span>
		</div>
	</div>
</footer>
